# Environment Variables

# Cloudflare Account
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_API_TOKEN=your_api_token

# D1 Database (auto-generated after creation)
D1_DATABASE_ID=your_database_id

# KV Namespace (auto-generated after creation)
KV_NAMESPACE_ID=your_kv_id

# R2 Bucket
R2_BUCKET_NAME=lot-media

# Queue (auto-generated after creation)
QUEUE_ID=your_queue_id

# Email (for OTP)
EMAIL_FROM=noreply@lot.example.com
EMAIL_API_KEY=your_email_api_key

# Payment (Stripe/PayHere)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Security
TURNSTILE_SECRET_KEY=your_turnstile_secret
